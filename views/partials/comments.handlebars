<div class="flow-root">
  <ul class="-mb-8">
    {{#each this}}
    <div class="relative m-8 p-2 bg-blue-200 rounded-md">
        <span class="absolute top-5 left-5 -ml-px h-full " aria-hidden="true"></span>
        <div class="relative flex items-start space-x-3">
          <div class="relative">
            <span class="absolute -bottom-0.5 -right-1 rounded-tl px-0.5 py-px">
              <!-- Heroicon name: solid/chat-alt -->
              <svg class="h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M18 5v8a2 2 0 01-2 2h-5l-5 4v-4H4a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2zM7 8H5v2h2V8zm2 0h2v2H9V8zm6 0h-2v2h2V8z" clip-rule="evenodd" />
              </svg>
            </span>
          </div>
          <div class="min-w-0 flex-1">
            <div>
              <div class="text-sm">
                <p class="font-medium text-gray-600">{{user.username}}</p>
              </div>
              <p class="mt-0.5 text-sm text-gray-500">
                Commented on {{format_date created_at}}
              </p>
            </div>
            <div class="mt-2 text-sm text-gray-900">
              <p>
                {{comment_text}}
              </p>
            </div>
          </div>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
</div>