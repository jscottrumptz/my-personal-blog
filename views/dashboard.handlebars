<section class="bg-blue-400 p-4 rounded-md">
  <h2 class="text-xl font-semibold">Create New Post</h2>

  <form class="new-post-form">
    <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <div class="sm:col-span-4">
        <label for="post-title" class="block text-sm font-medium text-gray-700">
          Title
        </label>
        <div class="mt-1 flex rounded-md shadow-sm">
          <input type="text" id="post-title" name="post-title" autocomplete="post-title" class="p-3 flex-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full min-w-0 rounded-none rounded-md sm:text-sm border-gray-300">
        </div>
      </div>

      <div class="sm:col-span-6">
        <label for="post-content" class="block text-sm font-medium text-gray-700">
          Content
        </label>
        <div class="mt-1">
          <textarea id="post-content" name="post-content" rows="3" class=" p-3 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"></textarea>
        </div>     
      </div>
      <button type="submit" class="m-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Create
      </button>
  </form>
</section>
{{#if posts.length}}
<section class="mt-8">
  <h2 class="text-xl font-semibold mb-6">Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link"><button class="m-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Edit post
          </button></a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>